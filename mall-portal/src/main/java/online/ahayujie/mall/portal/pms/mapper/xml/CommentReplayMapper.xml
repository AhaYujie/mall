<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.ahayujie.mall.portal.pms.mapper.CommentReplayMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="online.ahayujie.mall.portal.pms.bean.model.CommentReplay">
    <result column="id" property="id" />
    <result column="update_time" property="updateTime" />
    <result column="create_time" property="createTime" />
        <result column="comment_id" property="commentId" />
        <result column="member_nickname" property="memberNickname" />
        <result column="member_icon" property="memberIcon" />
        <result column="content" property="content" />
        <result column="type" property="type" />
    </resultMap>

    <resultMap id="DetailResultMap" type="online.ahayujie.mall.portal.pms.bean.dto.CommentReplayDTO">
        <result column="create_time" property="createTime" />
        <result column="member_nickname" property="memberNickname" />
        <result column="member_icon" property="memberIcon" />
        <result column="content" property="content" />
        <result column="type" property="type" />
    </resultMap>

    <select id="selectByPage" resultMap="DetailResultMap">
        select
        create_time, member_nickname, member_icon, content, type
        from pms_comment_replay
        where comment_id = #{commentId}
    </select>

</mapper>
